---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "CÓDIGO GUERRERO: Budismo Secular para el Dominio Interno", keywords = "budismo secular, desarrollo personal, mindfulness, meditación, autocontrol" } = Astro.props;
const resolveUrl = (url) => {
  if (!url || url.startsWith("http") || url.startsWith("#")) return url;
